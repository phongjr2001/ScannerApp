<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    android:background="@drawable/rounded_top_corners">

    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:singleLine="true"
        android:text="Setting Account"
        android:background="@drawable/rounded_top_corners"
        android:backgroundTint="#00ADC1"
        android:textColor="@color/bg_color"
        android:textStyle="bold"
        android:textSize="20dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:id="@+id/rl_info"
                android:layout_width="match_parent"
                android:layout_height="126dp">

                <ImageView
                    android:id="@+id/user"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:padding="1dp"
                    android:src="@drawable/man" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/user"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtUserName"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:textColor="@color/txt_color"
                        android:text="name"
                        android:gravity="center_vertical"
                        android:textSize="13dp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#888888" />

                    <TextView
                        android:text="name"
                        android:id="@+id/txtEmail"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:textColor="@color/txt_color"
                        android:gravity="center_vertical"

                        android:textSize="13dp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#888888" />

                    <TextView
                        android:text="name"
                        android:gravity="center_vertical"

                        android:id="@+id/txtPhoneNumber"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:textColor="@color/txt_color"
                        android:textSize="13dp" />
                </LinearLayout>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#888888" />

            <RelativeLayout
                android:id="@+id/rl_change_pin"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_pin"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:padding="1dp"
                    android:src="@drawable/key"
                    app:tint="@color/black" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"
                    android:layout_toEndOf="@+id/iv_pin"
                    android:text="Change pin"
                    android:textColor="@color/txt_color"
                    android:textSize="13dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_change_pass"
                android:layout_width="match_parent"
                android:layout_height="42dp">

                <ImageView
                    android:id="@+id/iv_password"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:padding="1dp"
                    android:src="@drawable/key"
                    app:tint="@color/black" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"
                    android:layout_toEndOf="@+id/iv_password"
                    android:text="Change password"
                    android:textColor="@color/txt_color"
                    android:textSize="13dp" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#888888" />

<!--            <RelativeLayout-->
<!--                android:id="@+id/rl_change_info"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="42dp">-->

<!--                <ImageView-->
<!--                    android:id="@+id/iv_change_info"-->
<!--                    android:layout_width="20dp"-->
<!--                    android:layout_height="20dp"-->
<!--                    android:layout_centerVertical="true"-->
<!--                    android:src="@drawable/ic_rename" />-->

<!--                <TextView-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_centerVertical="true"-->
<!--                    android:layout_marginStart="15dp"-->
<!--                    android:layout_toEndOf="@+id/iv_change_info"-->
<!--                    android:text="Edit info"-->
<!--                    android:textColor="@color/txt_color"-->
<!--                    android:textSize="13dp" />-->
<!--            </RelativeLayout>-->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#888888" />

            <RelativeLayout
                android:id="@+id/rl_LogOut"
                android:layout_width="match_parent"
                android:layout_height="42dp">

                <TextView
                    android:id="@+id/txt_LogOut"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#00ADC1"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="Log Out"
                    android:backgroundTint="#00ADC1"
                    android:textStyle="bold"
                    android:textColor="@color/bg_color"
                    android:textSize="20dp" />


            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
